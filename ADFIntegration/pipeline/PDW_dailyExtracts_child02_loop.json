{
	"name": "PDW_dailyExtracts_child02_loop",
	"properties": {
		"activities": [
			{
				"name": "Set date counter",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Set EndDate",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "vDateCounter",
					"value": {
						"value": "@string(div(div(div(div(sub(ticks(variables('vEndDate')),ticks(variables('vStartDate'))),10000000),60),60),24))",
						"type": "Expression"
					}
				}
			},
			{
				"name": "ForEach append",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Set date counter",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@range(0,add(int(variables('vDateCounter')),1))",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Append date array",
							"type": "AppendVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "vDateRange",
								"value": {
									"value": "@formatDateTime(AddToTime(variables('vStartDate'), item(), 'Day'), 'yyyy-MM-dd')",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "ForEach date",
				"description": "execute insert update for each date",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "ForEach append",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('vDateRange')",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "Execute daily Unzip",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "PDW_dailyExtracts_child03_unzip",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"table_name": "@pipeline().parameters.table_name",
									"container_name": "@pipeline().parameters.container_name",
									"run_date": "@item()"
								}
							}
						}
					]
				}
			},
			{
				"name": "Set EndDate",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "Set StartDate",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "vEndDate",
					"value": {
						"value": "@formatDateTime(pipeline().parameters.end_date, 'yyyy-MM-dd')",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Set StartDate",
				"type": "SetVariable",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"variableName": "vStartDate",
					"value": {
						"value": "@pipeline().parameters.start_date",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"start_date": {
				"type": "string"
			},
			"table_name": {
				"type": "string"
			},
			"container_name": {
				"type": "string"
			},
			"end_date": {
				"type": "string"
			}
		},
		"variables": {
			"vDateCounter": {
				"type": "String"
			},
			"vEndDate": {
				"type": "String"
			},
			"vStartDate": {
				"type": "String"
			},
			"vDateRange": {
				"type": "Array"
			},
			"vDate": {
				"type": "String"
			},
			"vTableName": {
				"type": "String"
			},
			"vIncremental": {
				"type": "String"
			}
		},
		"folder": {
			"name": "Delta_watermark/PDW_DAILY_REFRESH"
		},
